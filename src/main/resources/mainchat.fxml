<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MainChatController"
            style="-fx-background-color: #ECE5DD;">

    <!-- Barra superior -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #075E54; -fx-alignment: center-left;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblUsuario" text="Usuario"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Perfil" onAction="#abrirPerfil"
                    style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Lista de contactos -->
    <left>
        <VBox spacing="5" style="-fx-background-color: #F6F6F6;" prefWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Aquí va el Label que en el controlador se llama lblChat -->
            <Label fx:id="lblChat" text="Chats" style="-fx-font-weight: bold;"/>

            <!-- La lista de usuarios con el evento al hacer clic -->
            <ListView fx:id="listaUsuarios" prefHeight="600" onMouseClicked="#abrirChat"/>
        </VBox>
    </left>

    <!-- Zona central del chat -->
    <center>
        <VBox spacing="5" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <!-- Área donde aparecen los mensajes -->
            <TextArea fx:id="areaChat"
                      editable="false"
                      wrapText="true"
                      prefHeight="400"
                      style="-fx-background-color: #FFFFFF; -fx-border-color: #CCCCCC;"/>

            <!-- Barra para escribir mensajes -->
            <HBox spacing="5">
                <TextField fx:id="txtMensaje"
                           promptText="Escribe tu mensaje..."
                           HBox.hgrow="ALWAYS"/>
                <Button text="Enviar"
                        onAction="#enviarMensaje"
                        style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
