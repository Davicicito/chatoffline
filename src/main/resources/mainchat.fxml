<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MainChatController"
            style="-fx-background-color: #ECE5DD;">

    <!-- Barra superior -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #075E54; -fx-alignment: center-left;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblUsuario" text="Usuario"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Perfil" onAction="#abrirPerfil"
                    style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Lista de contactos -->
    <left>
        <VBox spacing="5" style="-fx-background-color: #F6F6F6;" prefWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Chats" style="-fx-font-weight: bold;"/>
            <ListView fx:id="listaUsuarios" prefHeight="600" onMouseClicked="#abrirChat"/>
        </VBox>
    </left>

    <!-- Zona central del chat -->
    <center>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Scroll de mensajes -->
            <ScrollPane fx:id="scrollChat" fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox fx:id="contenedorMensajes" spacing="8" style="-fx-background-color: #FFFFFF;"/>
            </ScrollPane>

            <!-- Archivo adjunto -->
            <Label fx:id="lblAdjunto" style="-fx-font-style: italic; -fx-text-fill: #555;"/>

            <!-- Enviar mensaje -->
            <HBox spacing="5">
                <Button text="ðŸ“Ž" onAction="#adjuntarArchivo"/>
                <TextField fx:id="txtMensaje"
                           promptText="Escribe tu mensaje..."
                           HBox.hgrow="ALWAYS"/>
                <Button text="Enviar"
                        onAction="#enviarMensaje"
                        style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>


</BorderPane>
