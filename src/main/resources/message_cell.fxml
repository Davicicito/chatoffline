<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<!-- Plantilla para UNA SOLA burbuja de mensaje -->
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="bubble" styleClass="bubble">
    <padding>
        <Insets bottom="8" left="12" right="12" top="8"/>
    </padding>

    <!-- Nombre del remitente -->
    <Label fx:id="senderLabel" styleClass="sender-label"/>

    <!-- Contenedor para la imagen (solo visible si hay una) -->
    <ImageView fx:id="imageView" fitHeight="150" fitWidth="200" preserveRatio="true" managed="false" visible="false"/>

    <!-- Contenido del mensaje (texto) -->
    <Label fx:id="messageLabel" wrapText="true" styleClass="message-label"/>

    <!-- Enlace para archivos adjuntos (PDF, DOC, etc.) -->
    <Hyperlink fx:id="fileLink" onAction="#abrirArchivo" managed="false" visible="false"/>

</VBox>
