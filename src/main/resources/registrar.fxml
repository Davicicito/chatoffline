<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.RegistrarController"
            style="-fx-background-color: #ECE5DD;">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Registro de usuario" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #075E54;"/>
            <TextField fx:id="txtNombre" promptText="Nombre de usuario" prefWidth="200"/>
            <TextField fx:id="txtEmail" promptText="Correo electrónico" prefWidth="200"/>
            <Button text="Registrar" onAction="#registrarUsuario"
                    style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Hyperlink text="⬅ Volver al inicio de sesión" onAction="#volverLogin"/>
            <Label fx:id="lblMensaje" textFill="red"/>
        </VBox>
    </center>
</BorderPane>

